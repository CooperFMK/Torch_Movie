<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fmk.activity.LogActivity"
    android:background="@mipmap/deng"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_30"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:background="@mipmap/shou"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15" />

            <EditText
                android:id="@+id/phone"
                android:layout_gravity="center_horizontal"
                android:hint="手机号:"
                android:maxLines="1"
                android:ems="12"
                android:textSize="25dp"
                android:textColor="#fcf9f9"
                android:textColorHint="#fcf9f9"
                android:paddingLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/suo"
                android:background="@mipmap/registeri"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15" />

            <EditText
                android:id="@+id/pwd"
                android:layout_gravity="center_horizontal"
                android:hint="登录密码:"
                android:maxLines="1"
                android:ems="12"
                android:textSize="25dp"
                android:textColor="#fcf9f9"
                android:textColorHint="#fcf9f9"
                android:paddingLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/yanjing"
                android:background="@mipmap/login"
                android:layout_marginLeft="@dimen/dp_230"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <CheckBox
                android:id="@+id/jizhu"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="记住密码"
                android:textColor="#fcf9f9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/kuai_zhu"
                android:layout_marginLeft="@dimen/dp_120"
                android:textColor="#fcf9f9"
                android:text="快速注册"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/denglu"
                android:text="登录"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/deng_shape_radius"
                android:textColor="#fcf9f9"
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_40" />

            <TextView
                android:text="第三方账号快速登录"
                android:textColor="#fcf9f9"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:background="@mipmap/weixin"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>